<?xml version='1.0' encoding='utf-8'?>
<widget id="edu.binghamton.bmobi" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>bMobi</name>
    <description>
        Binghamton University bMobi Application
    </description>
    <author email="helpdesk@binghamton.edu" href="https://www.binghamton.edu">
        Binghamton University ITS
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="https://www.binghamton.edu/communications-and-marketing/what-we-do/bmobi*" />
    <!-- <allow-navigation href="https://my.binghamton.edu/ar/app/*" /> -->
    <!-- <allow-navigation href="https://my.binghamton.edu/api/*" /> -->
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="icon.png" />
        <splash src="splash.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
</widget>
